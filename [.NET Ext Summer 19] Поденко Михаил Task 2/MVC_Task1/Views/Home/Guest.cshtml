
@{
    ViewBag.Title = "Guest";
    Layout = "~/Views/Shared/MyLayoutPage.cshtml";
}

<h2 id="body_cap">Отзывы</h2>

<div class="commentSection">
    @foreach (var reps in Model)
    {
        <div id="comment">
            <h2>@reps.Author</h2>
            <h3>@reps.Date</h3>
            <p>@reps.Content</p>
        </div>
    }
</div>

<div class="form">
    <h2>Ваш отзыв.</h2>

    @Html.ValidationSummary(true)

    @using (Html.BeginForm("AddFeed", "Home", FormMethod.Post))
    {

        @Html.TextBox("Author", null, new { required="required"});
        <br>
        @Html.TextArea("Content");
        <br>
        <input type="submit" name="Submit" value="Отправить">
    }
</div>


